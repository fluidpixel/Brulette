<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectSweeterView" >
    
    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/select_sweeter_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitle"
        android:layout_marginTop="20dp"
        android:text="@string/select_sweeter_text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <AutoCompleteTextView
        android:id="@+id/SelectSweeterView_TagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:singleLine="true" >

        <requestFocus />
    </AutoCompleteTextView>
    
     <ImageView
        android:id="@+id/SelectSweeterView_AddImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/SelectSweeterView_TagTextView"
        android:src="@drawable/add2" />
     
     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SelectSweeterView_TagTextView"
        android:layout_toLeftOf="@+id/SelectSweeterView_TagTextView"
        android:src="@drawable/search2" />

     <ImageView
         android:id="@+id/SelectSweeterView_Sugar1ImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/imageView1"
         android:src="@drawable/sugar" />

     <ImageView
         android:id="@+id/SelectSweeterView_Sugar2ImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:src="@drawable/sugar2" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/SelectSweeterView_Sugar2ImageView"
         android:layout_centerHorizontal="true"
         android:text="Sugar"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/SelectSweeterView_HoneyImageView"
         android:layout_below="@+id/SelectSweeterView_Sugar2ImageView"
         android:text="Honey"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <ImageView
         android:id="@+id/SelectSweeterView_HoneyImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/SelectSweeterView_Sugar1ImageView"
         android:layout_toLeftOf="@+id/SelectSweeterView_AddImageView"
         android:src="@drawable/honey" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView2"
         android:layout_alignBottom="@+id/textView2"
         android:layout_toLeftOf="@+id/textViewtitle"
         android:text="Sweetener"
         android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>